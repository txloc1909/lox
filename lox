#!/usr/bin/python3.11

import sys

from scanner import Scanner
from parser import Parser
from ast_printer import ASTPrinter


_HAS_ERROR = False

def run(src: str):
    scanner = Scanner(src)
    tokens = scanner.scan_tokens()
    parser = Parser(tokens)
    expr = parser.parse()

    if _HAS_ERROR or not expr:
        return

    print(ASTPrinter().print(expr))


def run_file(fname):
    global _HAS_ERROR
    run(open(fname).read())
    if _HAS_ERROR:
        sys.exit(65)


def run_prompt():
    global _HAS_ERROR
    while True:
        try:
            line = input(">>> ")
        except EOFError:
            # CTRL-D exit the intepreter
            break

        if line:
            run(line)
            _HAS_ERROR = False


def main(args):
    if len(args) > 2:
        print("Usage: ./lox [script]")
        sys.exit(65)
    elif len(args) == 2:
        run_file(args[1])
    else:
        run_prompt()


if __name__ == "__main__":
    main(sys.argv)
